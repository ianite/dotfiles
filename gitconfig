[user]
    name = Jon Nalley
    email = jnalley@earth
[include]
    path = ~/.git.user
[push]
    ; always be explicit
    default = nothing
[branch]
    autosetuprebase = always
[color]
    ui = true
[color "branch"]
    current = yellow black
    local = yellow bold
    remote = magenta
[color "diff"]
    meta = green
    frag = yellow bold
    old = red
    new = blue
    whitespace = red reverse
[color "status"]
    added = green
    changed = blue
    untracked = red
    branch = yellow bold
[alias]
    ci = commit
    co = checkout
    st = status --short --branch
    df = diff
    dc = diff --cached
    br = branch -a
    l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=local
    unpushed = log --branches --not --remotes --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
